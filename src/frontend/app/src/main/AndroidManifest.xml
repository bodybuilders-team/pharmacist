<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".PharmacistApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/pharmacy_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pharmacy_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pharmacist"
        tools:targetApi="31">
        <activity
            android:name=".ui.screens.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Pharmacist">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.screens.about.AboutActivity"
            android:theme="@style/Theme.Pharmacist" />

        <activity
            android:name=".ui.screens.authentication.login.LoginActivity"
            android:theme="@style/Theme.Pharmacist" />

        <activity
            android:name=".ui.screens.authentication.register.RegisterActivity"
            android:theme="@style/Theme.Pharmacist" />
    </application>

</manifest>